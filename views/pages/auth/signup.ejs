<%- include('../../partials/header.ejs') %>


    <div class="container my-container">
        <div class="row my-5">
            <div class="col-md-6 offset-md-3">
                <div class="card card-body ">
                    <h4><%= title  %></h4>
                    <form action="/auth/signup" method="POST">
                        <div class="form-group">
                            <label for="username">Enter your username(Must be unique)</label>
                            <input type="text" name="username"  id="username" value="<%= value.username %>" class="form-control <%= error.username? "is-invalid":""  %> " />
                            <div class="invalid-feedback">
                                <%= error.username &&  error.username  %>
                              </div>
                         
                        </div>
                        <div class="form-group">
                            <label for="email">Enter a vaild email</label>
                            <input type="email" name="email" value="<%= value.email %>"  id="email" class="form-control <%= error.email? "is-invalid":""  %> " >
                            <div class="invalid-feedback">
                                <%= error.email &&  error.email  %>
                              </div>
                        </div>
                        <div class="form-group">
                            <label for="password">Enter A Strong Password</label>
                            <input type="password" name="password" value="<%= value.password %>"  id="password" class="form-control <%= error.password? "is-invalid":""  %> ">
                            <div class="invalid-feedback">
                                <%= error.password &&  error.password  %>
                              </div>
                           
                        </div>
                        <div class="form-group">
                            <label for="confirmPassword">Confirm Your Password</label>
                            <input type="password" name="confirmPassword" id="confirmPassword" class="form-control <%= error.confirmPassword? "is-invalid":""  %>">
                            <div class="invalid-feedback">
                                <%= error.confirmPassword &&  error.confirmPassword  %>
                              </div>
                        </div>
                        <input type="submit" class="btn btn-primary" value="Register">
                    </form>
                </div>
            </div>

        </div>
    </div>

    <%- include('../../partials/footer.ejs') %>